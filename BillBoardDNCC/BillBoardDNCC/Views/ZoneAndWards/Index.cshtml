@model IEnumerable<BillBoardDNCC.Models.ZoneAndWard>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (Model != null && Model.Count() < 1)
    {
        @Html.ActionLink("Create New", "Create")    ;
    }
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TotalZone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalWard)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TotalZone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalWard)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
