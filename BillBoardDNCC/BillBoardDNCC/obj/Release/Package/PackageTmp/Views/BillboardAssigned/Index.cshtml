@model IEnumerable<BillBoardDNCC.Models.BillboardAssigned>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @using(Html.BeginForm())
    { 
    <div class="row">
        @*<label>Search:</label>*@
        <div class="col col-md-4">
            <label>Billboard</label>
            @Html.DropDownList("billboardId", ViewBag.Billboard as IEnumerable<SelectListItem>, "Select", new { @class = "form-control" })
        </div>
        <div class="col col-md-4">
            <label>Company</label>
            @Html.DropDownList("companyId", ViewBag.Company as IEnumerable<SelectListItem>, "Select", new { @class = "form-control" })
        </div>
        <div class="col col-md-4">
            <br />
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </div>
    }
    <br />
    @Html.ActionLink("Create New", "Create", new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Billboard.BillBoardUniqueKey)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Company.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateFrom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DNCCRefNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DNCCRefDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Billboard.BillBoardUniqueKey)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DNCCRefNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DNCCRefDate)
            </td>
            @if (User.IsInRole("admin"))
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            }
        </tr>
    }

</table>
